{
  "name": "git-viz-vscode",
  "displayName": "Git Viz",
  "description": "Horizontal Git repository visualization for VS Code and Cursor",
  "version": "1.7.16",
  "publisher": "kambei",
  "icon": "media/main-icon.png",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other", "Git", "Visualization"
  ],
  "activationEvents": [
    "onCommand:git-viz.test",
    "onCommand:git-viz.open",
    "onCommand:git-viz.refresh",
    "onCommand:git-viz.zoomIn",
    "onCommand:git-viz.zoomOut"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "iconThemes": [
      {
        "id": "git-viz-icons",
        "label": "Git Viz Icons",
        "path": "./media/icons.json"
      }
    ],
    "commands": [
      {
        "command": "git-viz.test",
        "title": "Test Git Viz",
        "category": "Git Viz"
      },
      {
        "command": "git-viz.open",
        "title": "Open Git Viz",
        "category": "Git Viz"
      },
      {
        "command": "git-viz.refresh",
        "title": "Refresh",
        "category": "Git Viz"
      },
      {
        "command": "git-viz.zoomIn",
        "title": "Zoom In",
        "category": "Git Viz"
      },
      {
        "command": "git-viz.zoomOut",
        "title": "Zoom Out",
        "category": "Git Viz"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceScheme == file",
          "command": "git-viz.open",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "git-viz.open",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "git-viz.refresh",
          "when": "git-viz.active"
        },
        {
          "command": "git-viz.zoomIn",
          "when": "git-viz.active"
        },
        {
          "command": "git-viz.zoomOut",
          "when": "git-viz.active"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/vscode": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kambei/git-viz-vscode.git"
  },
  "keywords": [
    "git",
    "visualization",
    "vscode",
    "extension",
    "horizontal",
    "graph",
    "kambei"
  ],
  "author": "kambei",
  "license": "MIT"
}
