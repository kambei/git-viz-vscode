{
  "name": "git-viz-vscode",
  "displayName": "Git Viz",
  "description": "Horizontal Git repository visualization for VS Code",
  "version": "1.0.0",
  "publisher": "kambei",
  "icon": "media/main-icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:git-viz.open",
    "workspaceContains:.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "iconThemes": [
      {
        "id": "git-viz-icons",
        "label": "Git Viz Icons",
        "path": "./media/icons.json"
      }
    ],
    "commands": [
      {
        "command": "git-viz.open",
        "title": "Open Git Viz",
        "category": "Git Viz"
      },
      {
        "command": "git-viz.refresh",
        "title": "Refresh",
        "category": "Git Viz"
      },
      {
        "command": "git-viz.zoomIn",
        "title": "Zoom In",
        "category": "Git Viz"
      },
      {
        "command": "git-viz.zoomOut",
        "title": "Zoom Out",
        "category": "Git Viz"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceScheme == file",
          "command": "git-viz.open",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "git-viz.open",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "git-viz.refresh",
          "when": "git-viz.active"
        },
        {
          "command": "git-viz.zoomIn",
          "when": "git-viz.active"
        },
        {
          "command": "git-viz.zoomOut",
          "when": "git-viz.active"
        }
      ]
    },
    "views": {
      "git-viz": [
        {
          "id": "git-viz-view",
          "name": "Git Visualization",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "git-viz",
          "title": "Git Viz",
          "icon": "media/git-viz-activity.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kambei/git-viz-vscode.git"
  },
  "keywords": [
    "git",
    "visualization",
    "vscode",
    "extension",
    "horizontal",
    "graph",
    "kambei"
  ],
  "author": "kambei",
  "license": "MIT"
}
